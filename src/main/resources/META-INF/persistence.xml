<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Your entity classes -->
        <class>com.example.med_consulting.Model.User</class>
        <class>com.example.med_consulting.Model.GeneralPractitioner</class>
        <class>com.example.med_consulting.Model.Specialist</class>
        <class>com.example.med_consulting.Model.Nurse</class>
        <class>com.example.med_consulting.Model.Patient</class>
        <class>com.example.med_consulting.Model.VitalSigns</class>
        <class>com.example.med_consulting.Model.WaitingQueue</class>
        <class>com.example.med_consulting.Model.Consultation</class>
        <class>com.example.med_consulting.Model.ExpertiseRequest</class>
        <class>com.example.med_consulting.Model.TimeSlot</class>
        <class>com.example.med_consulting.Model.MedicalProcedure</class>

        <properties>
            <!-- Database connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- âœ… FIXED: Changed ; to &amp; -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/med_consulting?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true"/>

            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="06database@SM23"/>

            <!-- Hibernate options -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>